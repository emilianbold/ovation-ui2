<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                <goal>nbm:cluster</goal>
            </goals>
        </action>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
                <goal>nbm:cluster-app</goal>
                
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <preAction>build-with-dependencies</preAction>
            <goals>
                <goal>nbm:cluster-app</goal>
                <goal>nbm:run-platform</goal>
            </goals>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>install</goal>
                <goal>-DskipTests</goal>
                <goal>nbm:run-platform</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <netbeans.run.params.ide>-J-Xdebug -J-Xrunjdwp:transport=dt_socket,suspend=n,server=n,address=${jpda.address}</netbeans.run.params.ide>
            </properties>
        </action>
        <action>
            <actionName>build-with-dependencies</actionName>
            <reactor>also-make</reactor>
            <goals>
                <goal>install</goal>
                <goal>-DskipTests</goal>
            </goals>
        </action>
    </actions>
